<div class="contatiner-fluid p-5">
    <div class="row m-0 p-0">
        <div class="col-md-3">
            <%= render 'shared/side_bar', type:"listing" %>
        </div>
        <div class="col-md-9">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Your Listings</h3>
                </div>
                <div class="card-body">
                    <% @rooms.each do |room| %>
                        <div class="row">
                            <div class="col-md-2">
                                <% if room.photos.count > 0 %>
                                    <%= image_tag room.photos.first.image, class: "w-100 img-thumbnail" %>
                                <% else %>
                                    <%= image_tag "no-image.jpg", class: "w-100 img-thumbnail" %>
                                <% end %>
                            </div>
                            <div class="col-md-10">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <% if (room.name || room.summary) %>
                                            <h4><%= room.name %></h4>
                                            <p><%= room.summary %></p>
                                        <% else %>
                                            <h4>No Name Yet</h4>
                                            <p>No Summary Yet</p>
                                        <% end %>
                                    </div>
                                    <div>
                                        <%= link_to "Update", listing_room_path(room), class:"btn btn-primary" %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% end %>
                    <div class="d-flex justify-content-center">
                        <%= will_paginate @rooms %>
                    </div>	
                </div>
            </div>
        </div>
    </div>
</div>