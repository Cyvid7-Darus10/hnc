<div class="contatiner-fluid">
    <div class="row m-0 p-0">
        <div class="col-md-3">
            <%= render 'side_bar', type:"description" %>
        </div>
        <div class="col-md-9">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Description</h3>
                </div>
                <div class="card-body">
                    <%= form_with(model: @room, local: true) do |f| %>
                        <div class="col-md-8 mx-auto mb-3">
                            <label class="h5">Listing Name</label> 
                            <%= f.text_field :name, class:"form-control", placeholder:"What is your listing name?" %>
                        </div>
                        <div class="col-md-8 mx-auto mb-3">
                            <label class="h5">Summary</label> 
                            <%= f.text_area :sumarry, class:"form-control", placeholder:"Summary of your house", rows: 5 %>
                        </div>
                        <div class="col-md-3 mx-auto">
                            <%= f.submit "Save", class:"btn btn-primary w-100" %>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>